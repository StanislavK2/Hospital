<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Banner_One">

    <RelativeLayout
        android:id="@+id/toolbar_relative_baner1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbarpannel">

        <RelativeLayout
            android:id="@+id/back_relative"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/back_button_benner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_relative_baner1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/text_banner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginStart="@dimen/size_20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вакцинация доступна здесь!"
                    android:fontFamily="@font/montserratmedium"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/size_18dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/image_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_banner1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_239dp"
                    android:src="@drawable/vaccine"
                    android:padding="@dimen/size_12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_banner"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_15dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_13dp"
                    android:textColor="@color/text_color"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserratmedium"
                    android:lineSpacingExtra="@dimen/size_5dp"
                    android:text="Вакцинация доступна\nВсе подробности описаны здесь... "/>

                <LinearLayout
                    android:id="@+id/time_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:textAlignment="textStart"
                        android:textColor="@color/intro_title_color"
                        android:text="Время :"
                        android:textSize="@dimen/size_13dp"/>

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_12dp"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="@color/intro_desription_color"
                        android:text="07:00 утра до 5:00 вечера"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/place_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_linear"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:textAlignment="textStart"
                        android:textColor="@color/intro_title_color"
                        android:text="Место :"
                        android:textSize="@dimen/size_13dp"/>

                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_12dp"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="@color/intro_desription_color"
                        android:text="Невельская, 24 Центральный район, Оренбург 460018"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/type_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/place_relative"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/size_20dp">

                    <TextView
                        android:id="@+id/txt6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratmedium"
                        android:textAlignment="textStart"
                        android:textColor="@color/intro_title_color"
                        android:text="Тип вакцины :"
                        android:textSize="@dimen/size_13dp"/>

                    <TextView
                        android:id="@+id/txt7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/intro_desription_color"
                        android:fontFamily="@font/montserratregular"
                        android:text="CovaXin | CoviShild"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
